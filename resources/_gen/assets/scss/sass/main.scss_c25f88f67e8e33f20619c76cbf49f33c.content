:root{--color-primary: #4189DD;--color-pastel-green: #12AD2B;--color-munsell: #EA0437;--color-ripe-mango: #FFC726}*{margin:0;padding:0}*,*::before,*::after{box-sizing:inherit}html{box-sizing:border-box;font-size:62.5%}body{font-family:'Roboto', sans-serif;font-size:1.6rem;font-weight:100;line-height:1.6rem}.btn{padding:1rem;transition:all 0.2s}.btn:link,.btn:visited{text-decoration:none;color:#000}.btn:hover,.btn:active{color:#fff;background-color:var(--color-primary)}.btn--green:hover,.btn--green:active{background-color:var(--color-pastel-green)}.btn--red:hover,.btn--red:active{background-color:var(--color-munsell)}.btn--yellow:hover,.btn--yellow:active{background-color:var(--color-ripe-mango)}.container-main{max-width:120rem;margin:8rem auto}.navigation__home{display:flex;justify-content:center}.navigation__logo{display:flex;margin:0 auto}.navigation__language{flex:0 0 7%;display:flex;justify-content:space-between}.navigation__content{list-style:none;margin-top:3rem;display:flex;justify-content:space-around;border-top:2px solid #000;border-bottom:2px solid #000;padding:1.15rem 0}
