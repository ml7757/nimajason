:root{--color-primary: #4189DD;--color-pastel-green: #12AD2B;--color-munsell: #EA0437;--color-ripe-mango: #FFC726;--line: 2px solid #000}*{margin:0;padding:0}*,*::before,*::after{box-sizing:inherit}html{box-sizing:border-box;font-size:62.5%}body{font-family:'Roboto', sans-serif;font-size:1.6rem;font-weight:100;line-height:1.6rem}.btn{padding:1rem;transition:all 0.2s}.btn:link,.btn:visited{text-decoration:none;color:#000}.btn:hover,.btn:active{color:#fff;background-color:var(--color-primary)}.btn--green:hover,.btn--green:active{background-color:var(--color-pastel-green)}.btn--red:hover,.btn--red:active{background-color:var(--color-munsell)}.btn--yellow:hover,.btn--yellow:active{background-color:var(--color-ripe-mango)}.navigation{display:flex;justify-content:space-between}.navigation__content,.navigation__language{list-style:none;display:flex}.navigation__content{justify-content:space-around}.navigation__item{margin-top:5rem}.navigation__item:not(:last-child){margin-right:3rem}.navigation__link{padding:5rem 1rem 1rem 1rem}.navigation__link:link,.navigation__link:visited{text-decoration:none;color:#fff;font-weight:700}.navigation__link:hover,.navigation__link:active{color:#333;background-color:#fff}.sidebar{color:#fff;width:45%;min-height:100vh;background:-webkit-linear-gradient(#12AD2B, #FFC726, #EA0437, #4189DD);background:-o-linear-gradient(#12AD2B, #FFC726, #EA0437, #4189DD);background:linear-gradient(#12AD2B, #FFC726, #EA0437, #4189DD)}.sidebar__container{width:60%;margin:auto;display:flex;flex-direction:column;align-items:center}.sidebar__logo{margin:10rem 0 5rem 0}.sidebar__expression{line-height:4rem;font-size:2.5rem;font-weight:300;list-style:none;padding-left:0;width:100%;display:flex;flex-direction:column}.sidebar__expression-offset{align-self:flex-end}
